@model Glosowanie.Models.Pool

@{
    ViewBag.Title = "CreatePool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="panel">
        <p>Kreator ankiet</p>
        <div class="stepImg">@Html.TextBoxFor(model => model.Title, new { placeholder = "Nazwa ankiety", @class = "input" })</div>
        <div class="input_error">@Html.ValidationMessageFor(model => model.Title)</div>
    </div>

    <div class="panel">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <p>Pytanie @(i + 1):</p>
            <div class="field">@Html.TextBoxFor(model => model.Questions[i].QuestionText, new { placeholder = "Podaj pytanie", @class = "question" })</div>
            for (int j = 0; j < Model.Questions[i].Answers.Count; j++)
            {
                <div class="field">@Html.TextBoxFor(model => model.Questions[i].Answers[j].AnswerText, new { placeholder = String.Format("Podaj odpowiedź {0}", j), @class = "answer" })</div>
            }
        }
    </div>

    <div class="panel">
        <button type="submit" style="clear:both;">Zapisz</button>
    </div>
}

